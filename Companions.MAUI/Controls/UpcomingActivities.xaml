<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Companions.MAUI.Models.App"
             x:Class="Companions.MAUI.Controls.UpcomingActivities"
             x:Name="this">

    <Grid>
        <CollectionView ItemsSource="{Binding Source={x:Reference this}, Path=Activities}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:UpcomingActivities">
                    <HorizontalStackLayout>
                        <Label>
                            <Label.Text>
                                <MultiBinding StringFormat="{}{0} - {1}">
                                    <Binding Path="ActivityName"/>
                                    <Binding Path="BuddyName"/>
                                </MultiBinding>
                            </Label.Text>
                        </Label>
                    </HorizontalStackLayout> 
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentView>
